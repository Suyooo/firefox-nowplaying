{
	"name": "Now Playing",
	"description": "Simple extension to automatically fetch the currently playing song from a YouTube or Spotify tab, and put it in a text file for stream widgets.",
	"manifest_version": 3,
	"version": "1.0",
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "firefox-nowplaying@suyo.be",
			"strict_min_version": "109.0"
		}
	},

	"background": {
		"scripts": ["background.js"]
	},

	"action": {
		"default_icon": {
			"16": "icon.svg",
			"32": "icon.svg"
		},
		"theme_icons": [
			{
				"light": "icon-dark.svg",
				"dark": "icon.svg",
				"size": 16
			},
			{
				"light": "icon-dark.svg",
				"dark": "icon.svg",
				"size": 32
			}
		]
	},

	"permissions": ["activeTab", "history", "nativeMessaging", "notifications", "scripting", "storage"]
}
